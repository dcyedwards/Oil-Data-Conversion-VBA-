i = 2
x = 3
lastx = ws3.Range("DO" & ws3.Rows.Count).End(xlUp).Row
lasti = ws.Range("A" & ws.Rows.Count).End(xlUp).Row
'lastcol = ws.Cells(2, ws.Columns.Count).End(xlToLeft).Column

